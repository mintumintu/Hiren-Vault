<html>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="/bootstrap-3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <title>{{title}}</title>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Hiren</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/new">Add New Data</a></li>
                    <li><a href="/data">Get Data</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <form action="/new" role="form" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label>Tag</label>
                <input type="text" class="form-control"  name='tag' placeholder="Tag">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label >User Name</label>
                <input type="text" class="form-control"  name='username' placeholder="Enter username">
            </div>
            <div class="form-group">
                <label>Site Address</label>
                <input type="url" class="form-control" name="url" placeholder="Site URL">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type='text' class="form-control" id="exampleInputPassword1" name='password' placeholder="Password">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
        {{#if status}}
            <div class="alert alert-success">
                <h1>{{ status }}</h1>
            </div>
        {{/if}}
        {{#if status}}
            <div class="alert alert-warning">
                <h1>{{status}}</h1>
            </div>
        {{/if}}
    </div>
</body>
<html>
